def turnRight(SPEED = 100, TURNANGLE = 90):
    ang = 0
    gyro_sensor.reset_angle(0)
    while ang < TURNANGLE:
        left_motor.run(SPEED)
        right_motor.run(-SPEED)
        ang = gyro_sensor.angle()
    robot.stop()

def turnLeft(SPEED = 100, TURNANGLE = 90):
    ang = 0
    gyro_sensor.reset_angle(0)
    while ang > TURNANGLE:
        left_motor.run(-SPEED)
        right_motor.run(SPEED)
        ang = gyro_sensor.angle()
    robot.stop()



